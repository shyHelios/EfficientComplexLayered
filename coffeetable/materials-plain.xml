			<float name="intIOR" value="1.5" />
			<float name="extIOR" value="1" />
			<boolean name="nonlinear" value="true" />
			<rgb name="diffuseReflectance" value="1, 0.378676, 0.0134734"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="Plastic_Black" >
