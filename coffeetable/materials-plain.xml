			<float name="alphaV" value="0.15"/>
		</bsdf>
	</bsdf>
<!-- TEAPOT -->
	<bsdf id="TeapotMetal" type="normalmap">
		<bsdf type="roughconductor">
			<string name="distribution" value="beckmann"/>
			<string name="material" value="Al"/>
			<spectrum name="specularReflectance" value="0.8, 0.7, 0.8"/>
