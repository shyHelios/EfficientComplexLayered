	<default name="integrator" value="pathwsampler"/>
	<default name="materials"  value="ours"/>
	<default name="spp"        value="8192"/>   

	<integrator type="$integrator">
		<integer name="maxDepth" value="65"/>
		<boolean name="strictNormals" value="true"/>
