			<!-- for fov=72 -->	
			<!--lookat origin="-1.13492, 0.83156, 1.607" target="-2.13163, 0.750494, 1.607" up="0, 1.0, 0"/-->

			<!-- for fov=96 -->	
			<!--lookat origin="-1.4, 0.81, 1.6" up="0.0, 1.0, 0.0" target="-3.1, 0.671732, 1.6"/-->
		</transform>

		<sampler type="independent">
			<integer name="sampleCount" value="$spp"/>
		</sampler>

		<film type="hdrfilm">
			<boolean name="banner" value="false"/>
			<integer name="height" value="1200"/>
			<integer name="width" value="1980"/>

			<rfilter type="gaussian"/>
		</film>
	</sensor>
<!-- LOAD MATERIALS -->
	<include filename="materials-$materials.xml"/>

<!-- COFFEE MACHINE -->
	<include filename="coffeemachine.xml"/>

<!-- COFFEE MUG -->	
	<!-- Front mug -->
	<shape type="obj" >
		<string name="filename" value="models/coffeemug.obj" />
