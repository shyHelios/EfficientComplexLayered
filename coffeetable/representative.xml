	<sensor type="perspective">
		<float name="focusDistance" value="2.08489"/>
		<float name="fov" value="40"/>
		<string name="fovAxis" value="y"/>
		<transform name="toWorld">

			<!--lookat origin="0.00945616, 1.00495, 1.57931" up="-0.333335, 0.942782, -0.00705584" target="-0.933292, 0.671732, 1.59307"/-->
			
			<!-- -closer/+farther, -up/+down, -right/+left -->
			
			<!-- for fov=32 -->
			<!--lookat origin="0.0, 1.0, 1.6" up="0.0, 1.0, 0.0" target="-3.1, 0.671732, 1.6"/-->
			
			<!-- for fov=68 -->	
			<!--lookat target="-2.05191, 0.844097, 1.6081269" up="0.0, 1.0, 0.0" origin="-1.05195, 0.834978, 1.6081269"/-->
